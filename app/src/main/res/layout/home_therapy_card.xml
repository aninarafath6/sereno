<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="24dp"
    android:background="@drawable/home_item_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ai_ripple" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica"
                android:text="Attend Personalised AI Therapy"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:alpha=".6"
                android:fontFamily="@font/helvetica"
                android:text="John - AI Therapist"
                android:textColor="@color/white"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <com.example.sereno.common.views.CustomButton
            android:id="@+id/call"
            android:layout_width="@dimen/spacing_20dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            app:icon="@drawable/ic_call"
            app:iconSize="@dimen/spacing_20dp"
            app:size="small"
            app:text="Call" />

        <com.example.sereno.common.views.CustomButton
            android:id="@+id/chat"
            android:layout_width="@dimen/spacing_20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:icon="@drawable/ic_chat"
            app:iconSize="@dimen/spacing_20dp"
            app:size="small"
            app:text="Chat" />

    </LinearLayout>
</LinearLayout>